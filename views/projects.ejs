<!doctype html>
<html lang="en">
<head>
 <% include partials/head.ejs%>
  <title>Projects</title>
</head>
<body>
  <% include partials/menu_bar.ejs%>
  <div class="main">  
     <h1>Personal projects</h1>
      <div class="projects">
       <%if(!proj_arr) {%>
          <h2>Ooops! There are no projects</h2>
       <% } else
         for (let s of proj_arr) { %>
             <a href = "projects/<%=s.id%>"> <img src="data:image/jpg;base64,<%= new Buffer(image).toString('base64') %>"></a>
              <h2><a href = "projects/<%=s.id%>"><%=s.name%></a></h2>
          <% } %>
   
    <div class="pagination">
          <% var i = 1;
          while (i <= pageNumber){%>
            <a href="?page=<%= i%>"><%= i%></a>
          <% i++;}%>
    </div>
  </div>
</div>
</body>
</html>